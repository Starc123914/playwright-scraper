# Comma-separated list of start URLs (overrides data/inputUrls.json if set)
START_URLS=https://example.com,https://example.com/products

# Directory to store output JSON/CSV files
OUTPUT_DIR=./data

# Output formats: json, csv or both (comma-separated)
OUTPUT_FORMATS=json,csv

# Browser type: chromium | firefox | webkit
BROWSER=chromium

# Headless mode: set to "false" to see the browser window
HEADLESS=true

# Maximum crawl depth from the seed URLs
MAX_DEPTH=1

# Maximum number of pages to visit in a single run
MAX_PAGES=50

# Maximum number of concurrent browser contexts (not heavily used in this sample)
CONCURRENCY=2

# Optional HTTP proxy URL (e.g. http://user:password@proxy.example:8000)
PROXY_URL=

# Logging verbosity: error | warn | info | debug
LOG_LEVEL=info

# If true, blocks images, fonts, and media requests to speed up crawling
BLOCK_MEDIA=false

# If true, saves page screenshots after navigation (for debugging)
SAVE_SCREENSHOTS=false